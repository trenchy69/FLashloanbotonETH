# .env.example - Copy to .env and fill in your values

# === Web3 Configuration ===
WEB3_PROVIDER_URL=https://eth-mainnet.g.alchemy.com/v2/lNa0QhGRjIvJGFqENQ_w_1eHXqdOCpxr
CHAIN_ID=1

# === Wallet Configuration ===
PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
WALLET_ADDRESS=0x1234567890123456789012345678901234567890

# === Smart Contract ===
FLASHSWAP_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890

# === Telegram Bot ===
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrSTUvwxYZ1234567890
TELEGRAM_CHAT_ID=123456789
# Your Telegram user ID for admin access
TELEGRAM_ADMIN_ID=123456789

# === DEX API Keys (Optional - for enhanced price feeds) ===
# CoinGecko API (Free tier available)
COINGECKO_API_KEY=your_coingecko_api_key

# 1inch API (For price comparisons)
ONEINCH_API_KEY=your_1inch_api_key

# === Scanner Configuration ===
# Minimum profit threshold in ETH
MIN_PROFIT_ETH=0.01

# Maximum gas price in gwei (scanner will pause above this)
MAX_GAS_PRICE=50

# Scan interval in seconds
SCAN_INTERVAL=5

# === Risk Management ===
# Maximum trade size in ETH
MAX_TRADE_SIZE=5.0

# Maximum slippage tolerance (0.5 = 0.5%)
MAX_SLIPPAGE=0.5

# === Execution Settings ===
# Auto-execute trades above this profit threshold (ETH)
AUTO_EXECUTE_THRESHOLD=0.05

# Enable/disable auto-execution (true/false)
AUTO_EXECUTION_ENABLED=false

# === Database ===
DATABASE_PATH=data/scanner.db

# === Logging ===
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR

# === Development ===
# Set to true for development mode (testnet, verbose logging)
DEVELOPMENT_MODE=false
# Testnet provider (if DEVELOPMENT_MODE=true)
TESTNET_PROVIDER_URL=https://eth-sepolia.g.alchemy.com/v2/lNa0QhGRjIvJGFqENQ_w_1eHXqdOCpxr